set number
if has('syntax')
  syntax on
endif
if has('filetype')
  filetype indent plugin on
endif
set hlsearch
set ignorecase
set smartcase
set backspace=indent,eol,start
set autoindent
set nostartofline
set confirm
set visualbell
set t_vb=
if has('mouse')
  set mouse=a
endif
set notimeout ttimeout ttimeoutlen=200
set pastetoggle=<F11>
set shiftwidth=4
set softtabstop=4
set expandtab
set tabstop=4

